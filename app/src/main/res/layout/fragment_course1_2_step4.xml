            <ImageView
                android:id="@+id/compile1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/compile"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonGoNext1_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_go_next_height"
        android:enabled="false"
        android:text="@string/goNext" />

