<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:stretchColumns="1,2,3"
    android:padding="10dp">
    <TableRow>
        <ImageView android:layout_width="30dp"  android:id="@+id/medal" android:gravity="center"/>
        <TextView android:id="@+id/group_rank" android:gravity="center" android:textSize="20sp"/>
        <TextView android:id="@+id/group_name" android:gravity="center" android:textSize="20sp"/>
        <TextView android:id="@+id/group_point" android:gravity="center" android:textSize="20sp"/>
    </TableRow>
</TableLayout>