<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:stretchColumns="1,2,3"
    android:padding="10dp">
    <TableRow android:weightSum="12">
        <!--<ImageView  android:gravity="center" android:layout_width="0dp"-->
            <!--android:id="@+id/medal"  android:layout_weight="1" android:layout_height="match_parent"/>-->
        <TextView android:id="@+id/group_rank" android:gravity="center" android:layout_width="0dp"
            android:textSize="20sp" android:layout_weight="2" android:layout_height="match_parent"/>
        <TextView android:id="@+id/group_name" android:gravity="center" android:layout_width="0dp"
            android:textSize="20sp" android:layout_weight="6" android:layout_height="match_parent"/>
        <TextView android:id="@+id/group_point" android:gravity="center" android:layout_width="0dp"
            android:textSize="20sp" android:layout_weight="4" android:layout_height="match_parent"/>
    </TableRow>
</TableLayout>