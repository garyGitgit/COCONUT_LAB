<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gachon.app.main.Fragment2"
    android:orientation="vertical">

        <TableLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="50dp"
            android:stretchColumns="1,2,3"
            android:padding="10dp">
                <TableRow android:weightSum="12">
                        <ImageView  android:gravity="center" android:layout_width="0dp"
                            android:id="@+id/medal"  android:layout_weight="1" android:layout_height="match_parent"/>
                        <TextView android:id="@+id/group_rank" android:gravity="center" android:layout_width="0dp"
                            android:textSize="15sp" android:layout_weight="1" android:layout_height="match_parent"
                            android:text="순위"/>
                        <TextView android:id="@+id/group_name" android:gravity="center" android:layout_width="0dp"
                            android:textSize="15sp" android:layout_weight="5" android:layout_height="match_parent"
                            android:text="그룹명"/>
                        <TextView android:id="@+id/group_point" android:gravity="center" android:layout_width="0dp"
                            android:textSize="15sp" android:layout_weight="5" android:layout_height="match_parent"
                            android:text="누적포인트"/>
                </TableRow>
        </TableLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/group_rank_list">
                        </ListView>
                </LinearLayout>

        </ScrollView>
</LinearLayout>
